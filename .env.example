# =============================================================================
# UNIFIED ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your actual values
# This single .env file is used by Backend, Frontend, and Docker Compose
# =============================================================================

# -----------------------------------------------------------------------------
# BACKEND CONFIGURATION (SooMeta-Be)
# -----------------------------------------------------------------------------

# Server Port
PORT=4201

# Database
# For local development: use your MongoDB Atlas connection string
# For Docker: this will be overridden by docker-compose.yml
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/

# Authentication
JWT_SECRET=your_jwt_secret_here

# Email Configuration (Gmail)
# IMPORTANT: Use Gmail App Password (16 characters, NO SPACES!)
# How to get: https://myaccount.google.com/apppasswords
EMAIL=your_email@gmail.com
PASSWORD=your_app_password_no_spaces

# OpenAI API
OPENAI_API_KEY=your_openai_api_key

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# RapidAPI Configuration
RAPIDAPI_KEY=your_rapidapi_key
RAPIDAPI_HOST=youtube-mp36.p.rapidapi.com

# Deepgram API
DEEPGRAM_API_KEY=your_deepgram_key

# Gemini API Keys
GEMINI_API_KEY=your_gemini_key
GEMINI_API_KEY_1=your_gemini_key_1
GEMINI_API_KEY_2=your_gemini_key_2
GEMINI_API_KEY_3=your_gemini_key_3

# AssemblyAI API
ASSEMBLYAI_API_KEY=your_assemblyai_key

# -----------------------------------------------------------------------------
# FRONTEND CONFIGURATION (soometa-web)
# -----------------------------------------------------------------------------

# Backend API URL (for Next.js client-side calls)
# Use http://localhost:4201 for both local and Docker development
NEXT_PUBLIC_API_BASE_URL=http://localhost:4201
